---
const {title} = Astro.props;
const {src} = Astro.props;
---

<div class="ad-container">
    <img src={src}
        class="ad-image">
    <div class="ad-info">
        <h4 class="ad-title">{title}</h4>
        <p class="ad-description">BUY OUR SHIT!!!</p>
        <a class="ad-link">Find out more</a>
    </div>
</div>


<style>
    	.ad-container {
	  display: flex;
	  align-items: center;
	  background-color: #f5f5f5;
	  padding: 10px;
	  border: 1px solid #ccc;
	  border-radius: 5px;
	  max-width: 100%;
	}
	
	.ad-image {
	  width: auto;
	  height: 140px;
	  object-fit: cover;
	  margin-right: 10px;
	  border-radius: 3px;
	}
	
	.ad-info {
	  flex: 1;
	}
	
	.ad-title {
	  font-size: 16px;
	  font-weight: bold;
	  margin: 0;
	  margin-bottom: 5px;
	  color: #000;
	}
	
	.ad-description {
	  font-size: 14px;
	  color: #777;
	  margin: 0;
	  margin-bottom: 10px;
	}
	
	.ad-link {
	  display: inline-block;
	  background-color: #4285f4;
	  color: #fff;
	  text-decoration: none;
	  padding: 5px 10px;
	  border-radius: 3px;
	  font-size: 14px;
	  text-align: center;
	}
	
	.ad-link:hover {
	  background-color: #3367d6;
	}
</style>